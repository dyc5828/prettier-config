{
	"$schema": "http://json.schemastore.org/prettierrc",
	"arrowParens": "always",
	"printWidth": 100,
	"proseWrap": "never",
	"semi": false,
	"singleQuote": true,
	"trailingComma": "es5",
	"useTabs": true,
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}
